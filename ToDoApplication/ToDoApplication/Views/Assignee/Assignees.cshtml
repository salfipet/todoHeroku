@model ToDoApplication.ViewModels.AssigneViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Assignees</title>
</head>
<body>
    <a asp-controller="Assignee" asp-action="AdditingAssigne">Add new Assigne</a><br />
    @if (Model.AllAssignees is not null)
    {
        <table>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
            </tr>

            @foreach (var item in Model.AllAssignees)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>
                <form asp-controller="Assignee" asp-action="delete" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="delete" />
                </form>
            </td>
            <td>
                <form asp-controller="Assignee" asp-action="editingAssignee" method="get" asp-route-id="@item.Id">
                    <input type="submit" value="edit" />
                </form>
            </td>
            <td>
                <form asp-controller="Todo" asp-action="AssigneesTodos" method="get" asp-route-id="@item.Id">
                    <input type="submit" value="see todos" />
                </form>
            </td>

        </tr>
            }


        </table>}
</body>
</html>
